{
  // Place your snippets for css here. Each snippet is defined under a snippet name and has a prefix, body and
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
  // same ids are connected.
  // Example:
  // "Print to console": {
  // 	"prefix": "log",
  // 	"body": [
  // 		"console.log('$1');",
  // 		"$2"
  // 	],
  // 	"description": "Log output to console"
  // },
  "khởi tạo style ban đầu": {
    "prefix": "init-style",
    "body": [
      "* {",
      "  margin: 0;",
      "  padding: 0;",
      "  box-sizing: border-box;",
      "}",
      "",
      "body {",
      "  overflow-x: hidden;",
      "}",
      "",
      "img {",
      "  display: block;",
      "  max-width: 100%;",
      "}",
      "",
      "a {",
      "  text-decoration: none;",
      "}"
    ],
    "description": "khởi tạo style ban đầu"
  },
  "background phía sau mờ hơn": {
    "prefix": "background-after",
    "body": [
      "$1::after {",
      "  content: \"\";",
      "  position: absolute;",
      "  top: 0;",
      "  left: 0;",
      "  width: 100%;",
      "  height: 100%;",
      "  border-radius: inherit;",
      "  background-color: currentColor;",
      "  opacity: 0.25;",
      "}"
    ],
    "description": "background phía sau mờ hơn"
  },
  "giới hạn text trong số dòng quy định, khúc thừa thì ellipsis": {
    "prefix": "text-clamp",
    "body": [
      "  display: -webkit-box;",
      "  -webkit-line-clamp: $0;",
      "  -webkit-box-orient: vertical;",
      "  overflow: hidden;",
      "  text-overflow: ellipsis;",
      "  width: 100%;",
      "  max-width: 100%;"
    ],
    "description": "giới hạn text trong số dòng quy định, khúc thừa thì ellipsis"
  },
  "khối hình vuông": {
    "prefix": "square",
    "body": ["  width: $1;", "  height: $1;", "  $0"],
    "description": "khối hình vuông"
  },
  "canh giửa với flex": {
    "prefix": "flex-center",
    "body": [
      "  display: flex;",
      "  align-items: center;",
      "  justify-content: center;"
    ],
    "description": "canh giửa với flex"
  }
}
